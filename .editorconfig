root = true

[*]
insert_final_newline = true
charset = utf-8

# intellij does not seem to support the [*.{js,py}] notation, list each separately
[*.java]
indent_style = space
indent_size = 2

[*.groovy]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.template]
insert_final_newline = false
